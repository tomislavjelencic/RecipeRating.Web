@model IEnumerable<RecipeRating.Model.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

<h1>Recipes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Thumbnail
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Dish)
            </th>*@
            <th>
                Channel
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
            <td>
                <a asp-area="" asp-controller="Recipes" asp-action="Details" asp-route-id="@item.Id" >@item.Name</a>
            </td>
            <td>
                <img src="@item.ThumbnailUrl" alt="Image" width="100">
            </td>
            @*<td>
                <img src="@item.Dish.ImageUrl" alt="Image" width="100">
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ProviderAccount.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
